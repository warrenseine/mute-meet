{
  "manifest_version": 3,
  "name": "Mute Meet",
  "version": "1.0.0",
  "description": "Toggle mute/unmute in Google Meet using a global shortcut on macOS",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://localhost:*;"
  },
  "commands": {
    "toggle-mute": {
      "description": "Toggle mute in the most recently used Google Meet tab"
    }
  }
}
